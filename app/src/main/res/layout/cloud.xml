<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">


    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/constr"
           android:background="@color/dark"
           android:layout_width="match_parent"
           android:layout_height="146dp"/>

        <TextView
            android:id="@+id/Date"
           app:layout_constraintTop_toTopOf="@id/constr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/constr"
            android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            android:textColor="@color/white"
            android:text="@string/May2019"
            android:layout_width="264dp"
            android:layout_height="42dp"
            android:layout_marginStart="91dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:gravity="top" />

        <TextView
            android:id="@+id/DateSecond"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="@string/_29"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/constr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/constr"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="292dp"
            app:layout_goneMarginBottom="40dp"/>

        <ImageView
            android:id="@+id/Location"
            android:src="@drawable/ic_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/constr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="331dp"
            />

        <TextView
            android:id="@+id/LocationSecond"
            android:layout_width="307dp"
            android:layout_height="24dp"
            android:textSize="16sp"
            android:text="@string/california_us"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/constr"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            />


        




    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>